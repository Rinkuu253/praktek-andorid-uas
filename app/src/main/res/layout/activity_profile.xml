<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/imageViewBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/login_bg"
        android:contentDescription="cumaBackground"/>

    <!-- Content Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:layout_marginTop="200dp"
        android:background="@color/white">

        <!-- Change Profile Picture Button -->
        <TextView
            android:id="@+id/usernamePengguna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UserName BOi"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginTop="75dp"/>
        <Button
            android:id="@+id/btnChangeProfilePic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubah Profil"
            android:textAlignment="textStart"
            android:layout_marginTop="50dp"
            android:background="@color/white"
            android:textColor="@color/black"
           />

        <!-- Change Password Button -->
        <Button
            android:id="@+id/btnChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:text="Ubah Password"
            android:background="@color/white"
            android:textColor="@color/black"
           />
        <Button
            android:id="@+id/btnHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:text="Lihat Histori Peminjaman"
            android:background="@color/white"
            android:textColor="@color/black"
            />

        <!-- Logout Button -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_marginTop="300dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:text="Logout"
            android:background="@color/white"
            android:textColor="@color/black"
           />

    </LinearLayout>
    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/default_book_image"
        android:scaleType="centerCrop"
        android:layout_marginTop="140dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:contentDescription="profilePengguna"


        android:layout_marginBottom="16dp"/>
</RelativeLayout>
